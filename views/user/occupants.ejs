<div class="container">

    <nav class="navbar navbar-expand-sm navbar-light bg-light">
        <% if(session.role=="admin"){ %>

        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link  " href="/rental/home">Home <span class="sr-only">(current)</span></a>
                <a class="nav-item nav-link" href="/rental/create">Create</a>
                <a class="nav-item nav-link" href="/rental/search">Search</a>
                <a class="nav-item nav-link active" href="/rental/admin">Admin</a>
            </div>
        </div>

        <%} else if(session.role=="client"){%>

        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link " href="./home">Home <span class="sr-only">(current)</span></a>
                <a class="nav-item nav-link" href="./search">Search</a>
                <a class="nav-item nav-link" href="#">./Myrental</a>
            </div>
        </div>

        <%} else {%>

        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link " href="./home">Home <span class="sr-only">(current)</span></a>
                <a class="nav-item nav-link" href="./search">Search</a>

            </div>
        </div>

        <%} %>
        <% if(!session.username){ %>
        <div>
            <a class="nav-item" href="/user/login">Sign In</a>
        </div>
        <%}else{%>
        Hi,<%=session.username %>
        <div>
            <form action="/user/logout" method="POST">
                <button type="submit" class="btn btn-light">logout</button>
            </form>
        </div>
        <% } %>
    </nav>

    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">Real Estate Rental System</h1>
            <p class="lead">Real Estate Rental Management System is a web-based system to facilitate and finding
                roomates.</p>
        </div>
    </div>

    <!-- occupants-->
    <div class="card col-xl-6 col-xs-12 px-4">
        <h4>
            <%= model.propertytitle %>
        </h4>
        <div class="row no-gutters">
            <img src="<%= model.ImageURL %>" class="card-img col-4 pr-4" alt="Responsive image"
                style="object-fit: cover;height: 146.4px;">

            <div class="col-8">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th scope="row ">Estate:<%= model.Estate %></th>

                        </tr>

                        <tr>
                            <th scope="row">Gross Area:<%= model.CrossArea %></th>

                        </tr>

                        <tr>
                            <th scope="row">Rent:$<%= model.Rent %></th>
                        </tr>
                        <tr>
                            <th scope="row">Bedrooms:<%= model.Bedrooms %></th>
                        </tr>
                        <tr>
                            <th scope="row">Expected Tenants:<%= model.ExpectedTenants %></th>
                        </tr>
                        <tr>
                            <% rental.forEach( function(rental) { %>
                            <th scope="row">Rentor Name: <%= rental.username %></th>
                            <% }); %>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>>